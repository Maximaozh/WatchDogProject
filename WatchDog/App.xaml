<Application x:Class="WatchDog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:local="clr-namespace:WatchDog"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            <sys:String x:Key="AppVersion">1.0.0.0</sys:String>
            <sys:String x:Key="Developer">Разработано студентом БПИ21-01 Сластниковым Максим Сергеевичем</sys:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
