<Window x:Class="WatchDog.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchDog.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="О нас" Height="330" Width="450">
    <StackPanel Margin="20">
        <TextBlock FontSize="20" FontWeight="Bold" Text="О нашем приложении" TextAlignment="Center" />
        <TextBlock Margin="0,10,0,0" Text="Название: WatchDog" FontSize="16" />
        <TextBlock Text="Версия: 1.0.0" FontSize="16" />
        <TextBlock Text="Автор: Сластников М.С. СИБГУ БПИ21-01" FontSize="16" />
        <TextBlock Text="Описание: Это приложение предназначено для отслеживания состояния работы веб-сайтов." FontSize="14" TextWrapping="Wrap" />
        <TextBlock Text="Возможности: Работа со списком отслеживаемых адресов, оповещение пользователя о ошибках получения доступа путём сообщения от телеграмм бота, сбор статистики по работе сайта и формирование на основе этого отчётов." FontSize="14" TextWrapping="Wrap" />
        <Button Content="Закрыть" HorizontalAlignment="Center" Margin="0,20,0,0" Click="CloseButton_Click" />
    </StackPanel>
</Window>
