<Window x:Class="WatchDog.Views.SingleInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchDog.Views"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Меню ввода" Height="160" Width="400">
    <StackPanel Margin="10">
        <TextBlock x:Name="Label" Text="Введите значение:" Margin="0,0,0,10"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10"/>
        <Button Content="OK" Click="OkButton_Click"/>
    </StackPanel>
</Window>
