<Window x:Class="WatchDog.Views.StatusMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        xmlns:local="clr-namespace:WatchDog.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Управление монитором" Height="300" Width="300">
    <StackPanel Margin="10">
        <TextBlock Margin="15,10,0,0" Text="Адрес:"/>
        <TextBox x:Name="AddressTextBox" Width="250"/>
        <TextBlock Margin="15,10,0,0" Text="Интервал (мс):"/>
        <TextBox  x:Name="IntervalTextBoxs" Width="250"/>
        <TextBlock Margin="15,10,0,0" Text="Метод проверки:"/>
        <ComboBox  Margin="15,0,0,0" x:Name="CheckMethodComboBox" Width="250"/>
        <Button x:Name="ConfirmButton" Content="Добавить/Сохранить" Click="AddButton_Click" Margin="15,10,0,0"/>
    </StackPanel>
</Window>
